generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Trade {
  id         String   @id @default(cuid())
  pair       String // Contoh: XAUUSD
  type       String // BUY atau SELL
  setup      String // Contoh: SMC Sweep
  lot        Float
  risk       Float // Modal yang dipertaruhkan ($)
  pnl        Float // Keuntungan/Kerugian bersih ($)
  status     String // WIN, LOSS, atau OPEN
  psychology String?
  reason     String?
  createdAt  DateTime @default(now())
}
