generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Trade {
  id              String   @id @default(cuid())
  pair            String   @default("XAUUSD")
  side            String   // BUY or SELL
  entry           Float
  sl              Float
  tp              Float
  pnl             Float?   // Diisi otomatis pas close
  status          String   @default("OPEN") // OPEN, WIN, LOSS, BE
  
  // SMC/ICT Data
  setup           String?  // Misal: MSS, FVG, Liquidity Sweep
  timeframe       String?  // M1, M5, H1
  riskReward      Float?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model TradingPlan {
  id            String   @id @default(cuid())
  dailyTarget   Float
  maxDailyLoss  Float
  rules         String[] // Array of rules
}
